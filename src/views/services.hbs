{{! Extends the main layout }}
{{> header }}

<div class="min-h-screen flex flex-col items-center justify-center p-6">
    <h1 class="text-4xl font-bold text-blue-600">Our Services</h1>
    <p class="text-lg mt-2 text-gray-700">We offer a range of high-quality services tailored to your needs.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
        {{#each services}}
            <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200 hover:shadow-xl transition">
                <h2 class="text-xl font-semibold text-gray-800">{{this.name}}</h2>
                <p class="text-gray-600 mt-2">{{this.description}}</p>
            </div>
        {{/each}}
    </div>
</div>

{{> footer }}
